<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>KyokuShare</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body>
    <h1 class="position-absolute start-50 translate-middle-x">Home page</h1>
        <div class="album py-5 bg-light">
            <div class="container">
                <% kyokus.forEach( kyoku => { %>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card mb-4 box-shadow text-bg-info">
                            <!-- <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap"> -->
                                <div class="card-body">
                                    <h3 class="card-text"><%= kyoku.title %></h3>
                                    <p class="card-text">by <%= kyoku.artist.name %></p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a href="/commentsByKyokuId/<%= kyoku.id %>"><button type="button" class="btn btn-sm btn-primary text-bg-primary" >View comments</button></a>
                                            <button type="button" class="btn btn-sm btn-secondary text-bg-secondary">Edit</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </body>
</html>