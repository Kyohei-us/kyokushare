<!DOCTYPE html>
<html>

<head>
    <!-- Load jquery first, then bootstrap 5 -->
    <meta charset="UTF-8">
    <title>KyokuShare</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<script>
    function createKyokuOnSubmit() {
        const kyokuTitle = $.trim($("#kyokuTitleInput").val());
        const artistName = $.trim($("#artistNameInput").val());

        const data = {
            title: kyokuTitle,
            artist_name: artistName
        }

        fetch('/api/kyokus', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
        })
            .then((response) => response.json())
            .then((data) => {
                console.log('Success:', data);
                $("#kyokuCreateSuccessModal").modal('show');
            })
            .catch((error) => {
                console.error('Error:', error);
                $("#kyokuCreateFailedModal").modal('show');
            });
    }
</script>

<body>

    <div id="kyokuCreateSuccessModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Kyoku Creation Successful!</h5>
                    <button type="button" class="close" onclick="refreshPage()" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>New Kyoku is successfully created! Now, let's begin adding comments!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="refreshPage()">OK!</button>
                </div>
            </div>
        </div>
    </div>

    <div id="kyokuCreateFailedModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Kyoku Creation Failed!</h5>
                    <button type="button" class="close" onclick="refreshPage()" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>New Kyoku creation failed. Please make sure all fields are properly filled out.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="refreshPage()">OK!</button>
                </div>
            </div>
        </div>
    </div>

    <h1 class="position-absolute start-50 translate-middle-x">Home page</h1>
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                <% kyokus.forEach( kyoku => { %>
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow text-bg-info">
                        <!-- <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap"> -->
                            <div class="card-body">
                                <h3 class="card-text"><%= kyoku.title %></h3>
                                <p class="card-text">by <a href="/artist/<%= kyoku.artist.id %>"><%= kyoku.artist.name %></a></p>
                                <p class="card-text">Top Comment: <%= kyoku.comments.length > 1 ? kyoku.comments.sort((a,b) => b.reputation.points - a.reputation.points)[0].body : (kyoku.comments.length == 1) ? kyoku.comments[0].body : "No comments yet" %></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="/commentsByKyokuId/<%= kyoku.id %>"><button type="button" class="btn btn-sm btn-primary text-bg-primary" >View comments (<%= kyoku.comments.length %>)</button></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <div class="bg-light">
        <div class="mb-3 mx-auto w-50">
            <label for="kyokuTitleInput" class="form-label">Kyoku Title</label>
            <input type="text" class="form-control" id="kyokuTitleInput" />
        </div>
        <div class="mb-3 mx-auto w-50">
            <label for="artistNameInput" class="form-label">Artist Name</label>
            <input type="text" class="form-control" id="artistNameInput" />
        </div>
        <div class="mb-3 mx-auto text-center">
            <button type="button" class="btn btn-primary mb-3" onclick="createKyokuOnSubmit()" >Create new Kyoku</button>
        </div>
    </div>

    </body>
</html>